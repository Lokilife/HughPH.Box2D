<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>HughPH.Box2D</PackageId>
        <Authors>HughPH BlueSky:@hph.pw</Authors>
        <Description>C# bindings for Box2D 3.1</Description>
        <PackageTags>Box2D Physics GameDev Bindings Dotnet Csharp Fsharp VisualBasic</PackageTags>
        <RepositoryUrl>https://github.com/HughPH/Box2D-dotnet-bindings</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <License>MIT</License>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

        <PackageReadmeFile>README.md</PackageReadmeFile>
        
        <TargetFrameworks>net9.0</TargetFrameworks>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <RootNamespace>Box2D</RootNamespace>
        <LangVersion>preview</LangVersion>

        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        
    </PropertyGroup>
    
    <Target Name="SetVersionDefaults" BeforeTargets="PrepareForBuild">
        <PropertyGroup>
            <Year>$([System.DateTime]::UtcNow.ToString("yyyy"))</Year>
            <Month>$([System.DateTime]::UtcNow.ToString("MM"))</Month>
            <Day>$([System.DateTime]::UtcNow.ToString("dd"))</Day>
            <Hour>$([System.DateTime]::UtcNow.ToString("HH"))</Hour>
            <Minute>$([System.DateTime]::UtcNow.ToString("mm"))</Minute>

            <Version Condition="'$(Version)' == ''">$(Year).$(Month).$(Day).$(Hour)$(Minute)</Version>
            <AssemblyVersion Condition="'$(AssemblyVersion)' == ''">$(Version)</AssemblyVersion>
            <PackageVersion Condition="'$(PackageVersion)' == ''">$(Version)-donotuse</PackageVersion>
        </PropertyGroup>
    </Target>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugType>none</DebugType>
        <Optimize>true</Optimize>
      <DefineConstants>TRACE</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DebugType>full</DebugType>
      <DefineConstants>TRACE</DefineConstants>
    </PropertyGroup>
    
    <PropertyGroup>
        <DocumentationFile>bin/$(Configuration)/netstandard2.1/Box2DBindings.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <!-- Readme -->
        <None Include="README.md" Pack="true" PackagePath="/" />
        
        <!-- Windows DLL -->
        <None Include="native/win-x64/libbox2d.dll" Pack="true" PackagePath="runtimes/win-x64/native/" Condition="Exists('native/win-x64/libbox2d.dll')">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- Windows x86 DLL -->
        <None Include="native/win-x86/libbox2d.dll" Pack="true" PackagePath="runtimes/win-x86/native/" Condition="Exists('native/win-x86/libbox2d.dll')">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- Windows arm64 DLL -->
        <None Include="native/win-arm64/libbox2d.dll" Pack="true" PackagePath="runtimes/win-arm64/native/" Condition="Exists('native/win-arm64/libbox2d.dll')">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- Linux SO -->
        <None Include="native/linux-x64/libbox2d.so" Pack="true" PackagePath="runtimes/linux-x64/native/" Condition="Exists('native/linux-x64/libbox2d.so')">
             <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- Linux x86 SO -->
        <None Include="native/linux-x86/libbox2d.so" Pack="true" PackagePath="runtimes/linux-x86/native/" Condition="Exists('native/linux-x86/libbox2d.so')">
             <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- Linux arm64 SO -->
        <None Include="native/linux-arm64/libbox2d.so" Pack="true" PackagePath="runtimes/linux-arm64/native/" Condition="Exists('native/linux-arm64/libbox2d.so')">
             <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- OSX DYLIB -->
        <None Include="native/osx-x64/libbox2d.dylib" Pack="true" PackagePath="runtimes/osx-x64/native/" Condition="Exists('native/osx-x64/libbox2d.dylib')">
             <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <!-- OSX ARM64 DYLIB -->
        <None Include="native/osx-arm64/libbox2d.dylib" Pack="true" PackagePath="runtimes/osx-arm64/native/" Condition="Exists('native/osx-arm64/libbox2d.dylib')">
             <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>        
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" Version="2024.3.0" />
    </ItemGroup>

